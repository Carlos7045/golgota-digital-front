{
  "version": 2,
  "buildCommand": "node build-vercel.js",
  "outputDirectory": "dist/public",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/avatars/(.*)",
      "destination": "/api/avatars.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}